$(document).ready(function (){

    function initialize() {
    	var myCoords = new google.maps.LatLng(33.793152, -84.422114)
      
		var mapOptions = {
		center: myCoords,
		zoom: 15,
		scrollwheel: false
		};

		var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);    
    	// var image = 'http://www.iconsdb.com/icons/preview/caribbean-blue/low-importance-xxl.png';
    	var image = "<%= asset_path 'wifi.png' %>"
    	var marker = new google.maps.Marker({ 
	    	position: myCoords, 
	    	map: map,
	    	title: 'Wifee House',
	    	icon: image,
	    	animation: google.maps.Animation.DROP,
	    	draggable: true
    });
    	var contentString = '<h2>Strongbox West</h2>' +
   '<p>Where all your dreams come true.</p>';

 		var infowindow = new google.maps.InfoWindow({
   content: contentString
 });

 		google.maps.event.addListener(marker, 'click', function() {
    infowindow.open(map,marker);
 });

    } //closes out the function

    
      
    google.maps.event.addDomListener(window, 'load', initialize);
});
