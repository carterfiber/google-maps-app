

$(document).ready(function (){

    function initialize() {
    	var myCoords = new google.maps.LatLng(latitude, longitude);
      
		var mapOptions = {
		center: myCoords,
		zoom: 15,
		scrollwheel: false
		};

		var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);    
    	// var image = 'http://www.iconsdb.com/icons/preview/caribbean-blue/low-importance-xxl.png';
    	var image = "<%= asset_path 'wifi.png' %>"
    	var marker = new google.maps.Marker({ 
	    	position: myCoords, 
	    	map: map,
	    	title: address,
	    	icon: image,
	    	animation: google.maps.Animation.DROP,
	    	draggable: true
    });
    	var contentString = '<h2>' + address + '</h2>';

 		var infowindow = new google.maps.InfoWindow({
   content: contentString
 });

 		google.maps.event.addListener(marker, 'click', function() {
    infowindow.open(map,marker);
 });

    } //closes out the function

    
      
    google.maps.event.addDomListener(window, 'load', initialize);
});


